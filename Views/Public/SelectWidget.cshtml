@model List<QuickChat.MVC.ViewModels.WidgetViewModels.WidgetListItemViewModel>

@{
    ViewData["Title"] = "Wybierz widżet";
}

<h1 class="mb-4">
    <i class="bi bi-chat-left-text me-2"></i> Wybierz widżet do rozmowy
</h1>

@if (Model.Any())
{
    <ul class="list-group">
        @foreach (var widget in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>@widget.Name</span>
                <a class="btn btn-sm btn-primary" href="@Url.Action("Index", "Chat", new { widgetId = widget.Id })">
                    Rozpocznij czat
                </a>
            </li>
        }
    </ul>
}
else
{
    <div class="alert alert-info">
        Brak dostępnych widżetów do rozmowy.
    </div>
}
