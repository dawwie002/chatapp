@model QuickChat.MVC.ViewModels.WidgetViewModels.EditWidgetViewModel

@{
    ViewData["Title"] = "Ustawienia ogólne";
}

<h3 class="mb-3">
    <i class="bi bi-pencil-square me-1"></i> Ustawienia ogólne
</h3>

<form asp-action="Edit" method="post">
    <div class="mb-4">
        <label asp-for="Name" class="form-label fw-semibold">Nazwa widżetu</label>
        <input asp-for="Name" class="form-control" placeholder="Wpisz nazwę widżetu..." />
        <span asp-validation-for="Name" class="text-danger small"></span>
    </div>

    <input type="hidden" asp-for="Id" />

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save me-1"></i> Zapisz zmiany
        </button>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
