@using QuickChat.MVC.ViewModels.WidgetViewModels
@model WidgetEditPanelViewModel
@{
    ViewBag.Title = "Zarządzaj widżetem";
}

<style>
    .nav-link {
        transition: background-color 0.2s ease;
    }

        .nav-link:hover {
            background-color: #f8f9fa;
        }

        .nav-link.active {
            background-color: #0d6efd !important;
            color: white !important;
        }

    .tab-pane {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 1.5rem;
    }

    .sidebar {
        border-right: 1px solid #dee2e6;
    }

    .section-title {
        border-bottom: 2px solid #dee2e6;
        padding-bottom: 0.5rem;
        margin-bottom: 1rem;
    }
</style>

<h1 class="section-title">
    <i class="bi bi-gear me-1"></i> Ustawienia
</h1>
<h2 class="text-muted mb-4">Dostosuj swój widżet</h2>

<div class="row">
    <div class="col-md-3 sidebar">
        <ul class="nav flex-column nav-pills">
            <li class="nav-item mb-2">
                <a class="nav-link active" data-bs-toggle="tab" href="#tab-settings">
                    <i class="bi bi-gear me-1"></i> Ogólne
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" data-bs-toggle="tab" href="#tab-team">
                    <i class="bi bi-people me-1"></i> Zespół
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" data-bs-toggle="tab" href="#tab-category">
                    <i class="bi bi-tags me-1"></i> Kategorie
                </a>
            </li>
        </ul>
    </div>

    <div class="col-md-9 tab-content">
        <div class="tab-pane fade show active" id="tab-settings">
            @await Html.PartialAsync("~/Views/Widget/Partials/_EditWidgetPartial.cshtml", Model.EditModel)
        </div>
        <div class="tab-pane fade" id="tab-team">
            @await Html.PartialAsync("~/Views/Widget/Partials/_ManageTeamPartial.cshtml", Model.TeamModel)
        </div>
        <div class="tab-pane fade" id="tab-category">
            @await Html.PartialAsync("~/Views/Widget/Partials/_AddCategoryPartial.cshtml", Model.CategoryModel)
        </div>
    </div>
</div>
